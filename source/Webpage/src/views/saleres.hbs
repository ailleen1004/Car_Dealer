                    <td>{{Model}}</td>
                    <td>{{Engine_size}}</td>
                    <td>{{Sale_date}}</td>                    
                    <td>{{SSid}}</td>
                    <td>{{CSsn}}</td>                   
                </tr>
                </form>
                {{/each}}
            </table>
        <h2>판매 완료된 TRUCK</h2>
            <table>
                <tr>
                    <td>번호</td>
                    <td>가격</td>
                    <td>모델명</td>
                    <td>무게</td>
